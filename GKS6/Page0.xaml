<Page x:Class="GKS6.Page0"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
            d:DesignHeight="725" d:DesignWidth="902"
       Background="White" Width="902" Height="725"
	Title="Page1">

    <Grid>
        <TextBox x:Name="textBox_Input" HorizontalAlignment="Left" Height="600" Margin="10,10,0,0" VerticalAlignment="Top" TextWrapping="Wrap" AcceptsReturn="True" Width="600" FontSize="14" TextChanged="textBox_Input_TextChanged"/>
        <Button x:Name="button_Load" Content="Загрузить с файла" HorizontalAlignment="Left" Margin="10,695,0,0" VerticalAlignment="Top" Width="125" Click="button_Load_Click"/>
        <Button x:Name="button_Continue" Content="Продолжить" HorizontalAlignment="Left" Margin="767,695,0,0" VerticalAlignment="Top" Width="125" Click="button_Continue_Click"/>

    </Grid>
</Page>
